@page "/"
<h1>Helse Sør-Øst</h1>
<p>Dashboard som viser statistikk for Helse Sør-Øst under ett</p>

<div class="row">
    <div class="col-xl-3 col col-lg-6 py-2">
        <RadzenCard>
            <h2>Siste 7 dager <label style="color: #28a745; position: absolute; font-size: 3rem; right: 2rem; top: 1rem">@reqsLastWeekCount</label></h2>
            @if (reqlwChartTest == null)
            {
                <MatProgressCircle Indeterminate="true" FourColored="true" />
            }
            else
            {
            <RadzenChart style="width: 100%; height: 200px">
                <RadzenColumnSeries Stroke="#bbdefb" Fill="#455a64" Data="@reqlwChartTest" CategoryProperty="Label" Title="Rekvisisjoner" ValueProperty="Count" />
                <RadzenCategoryAxis FormatString="{0:dd MMM}" Padding="50" />
                <RadzenColumnOptions Margin="10" />
                <RadzenLegend Visible="false" />
            </RadzenChart>
            }
        </RadzenCard>
    </div>
    <div class="col-xl-3 col col-lg-6 py-2">
        <RadzenCard>
            <h2>Siste 24 timer <label style="color: #28a745; position: absolute; font-size: 3rem; right: 2rem; top: 1rem">@reqsLastDayCount</label></h2>
            <RadzenChart style="width: 100%; height: 200px">
                <RadzenColumnSeries Stroke="#bbdefb" Fill="#455a64" Data="@reqldChartTest" CategoryProperty="Label" Title="Rekvisisjoner" ValueProperty="Count" />
                <RadzenCategoryAxis FormatString="{0:ddd HH}" Padding="50" />
                <RadzenColumnOptions Margin="10" />
                <RadzenLegend Visible="false" />
            </RadzenChart>
        </RadzenCard>
    </div>
    <div class="col-xl-3 col col-lg-6 py-2">
        <RadzenCard>
            <h2>Topp rekv. sendere</h2>
